<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ccrent.mapper.BoardMapper">

	<select id="selectAll" resultType="kr.co.ccrent.domain.BoardVO">
		select * from ${bo_table} order by wr_id desc
	</select>
	
	<select id="selectList" resultType="kr.co.ccrent.domain.BoardVO">
		select * from ${bo_table} order by wr_id desc limit #{skip}, #{size}
	</select>
	
	<select id="selectCount" resultType="int">
		select count(wr_id) from ${bo_table}
	</select>

</mapper>